{
  "name": "draft-convert",
  "version": "1.1.1",
  "description": "Extensibly serialize & deserialize Draft.js ContentState",
  "main": "lib/index.js",
  "repository": "HubSpot/draft-convert",
  "scripts": {
    "build": "npm run build:commonjs && npm run build:umd && npm run build:umd:min",
    "build:commonjs": "BABEL_ENV=commonjs babel src --out-dir lib",
    "build:umd": "webpack --config webpack.config.development.js ./src/index.js ./dist/draft-convert.js",
    "build:umd:min": "webpack --config webpack.config.production.js ./src/index.js ./dist/draft-convert.min.js",
    "test": "npm run test:karma",
    "test:karma": "karma start test/karma.config.js --single-run",
    "clean": "rm -rf ./dist && rm -rf ./lib",
    "build-and-test": "npm run clean && npm run build && npm test",
    "prepublish": "npm run build-and-test"
  },
  "files": [
    "dist",
    "lib"
  ],
  "keywords": [
    "draft",
    "draftjs",
    "draft-convert",
    "convert"
  ],
  "author": "bbriggs@hubspot.com",
  "license": "Apache-2.0",
  "peerDependencies": {
    "react": "^15.0.2",
    "react-dom": "^15.0.2"
  },
  "dependencies": {
    "draft-js": "^0.6.0",
    "immutable": "^3.8.1",
    "invariant": "^2.2.1"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.7.7",
    "babel-loader": "^6.2.4",
    "babel-preset-es2015": "^6.6.0",
    "jasmine": "^2.2.0",
    "karma": "^0.13.22",
    "karma-chrome-launcher": "^0.2.3",
    "karma-jasmine": "^0.3.8",
    "karma-webpack": "^1.7.0",
    "webpack": "^1.13.0"
  }
}
